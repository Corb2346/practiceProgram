import java.util.Scanner;

public class Program
{
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int amount = scanner.nextInt(); //recive amount in int
		//your code goes here
		int months = 3;
		double payment;
		double doubleAmount = amount; //amount recive in int change to double so info would not be missing
		int contador=0;

		do{

			payment = doubleAmount * .10;
		 	doubleAmount = doubleAmount - payment;
			//System.out.println(doubleAmount);
			contador++;

		}while (contador<3);//does the calculation

		System.out.println((int)doubleAmount); print result in int 
		System.out.println(doubleAmount);print result in double
	}
}
